<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="6sp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context=".MainActivity"
                tools:showIn="@layout/activity_main">

  <RelativeLayout
      android:id="@+id/serverStatusBox"
      android:padding="8sp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/statusBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

      <TextView
          android:id="@+id/serverStatusLabel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/serverStatusLabel"/>

      <TextView
          android:id="@+id/serverStatus"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="4sp"
          android:layout_toRightOf="@+id/serverStatusLabel"
          android:text="@string/stringContent"/>

      <TextView
          android:id="@+id/onlinePlayersLabel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/serverStatus"
          android:text="@string/onlinePlayersLabel"/>

      <TextView
          android:id="@+id/onlinePlayers"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/serverStatus"
          android:layout_marginLeft="4sp"
          android:layout_toRightOf="@+id/onlinePlayersLabel"
          android:text="@string/stringContent"/>

    </RelativeLayout>

    <Button
        android:id="@+id/openSkillsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="Opens skills queue"/>

  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/progressBarLayout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/serverStatusBox"
      android:background="@drawable/border_filled">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="32sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:background="@drawable/border_char_skill_filled_mid"/>

    <TextView
        android:id="@+id/skillName"
        style="@style/skillProgressStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/progressBar"
        android:layout_marginLeft="12sp"
        android:text="Power Grid Management* V"/>

    <TextView
        android:id="@+id/timeLeft"
        style="@style/skillProgressStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/progressBar"
        android:layout_marginRight="12sp"
        android:text="20ч 22мин + "/>

  </RelativeLayout>

  <ListView
      android:id="@+id/charListView"
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_below="@+id/progressBarLayout"
      android:layout_marginTop="1sp"/>

</RelativeLayout>
