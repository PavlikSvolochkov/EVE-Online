<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/serverStatusBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/statusBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/serverStatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/serverStatusLabel" />

            <TextView
                android:id="@+id/serverStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4sp"
                android:layout_toEndOf="@+id/serverStatusLabel"
                android:text="@string/stringContent" />

            <TextView
                android:id="@+id/onlinePlayersLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/serverStatus"
                android:text="@string/onlinePlayersLabel" />

            <TextView
                android:id="@+id/onlinePlayers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/serverStatus"
                android:layout_marginStart="4sp"
                android:layout_toEndOf="@+id/onlinePlayersLabel"
                android:text="@string/stringContent" />

        </RelativeLayout>

        <Button
            android:id="@+id/openSkillsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Opens skills queue" />

    </RelativeLayout>

</LinearLayout>
