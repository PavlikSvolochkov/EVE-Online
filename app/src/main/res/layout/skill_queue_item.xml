<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/progressBarLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_char_skill_filled"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/skillName"
        style="@style/skillProgressStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Power Grid Management*" />

    <TextView
        android:id="@+id/skillLevel"
        style="@style/skillProgressStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/skillName"
        android:paddingStart="8dp"
        android:text="V" />

    <TextView
        android:id="@+id/endTime"
        style="@style/skillProgressStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignRight="@+id/skillLevel"
        android:text="20ч 22мин" />

</RelativeLayout>