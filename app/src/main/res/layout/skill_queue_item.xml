<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/skillQueueItem"
                android:orientation="vertical">

  <ImageView
      android:id="@+id/skillIcon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ps_64"/>

  <TextView
      android:id="@+id/skillName"
      style="@style/skillProgressStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toEndOf="@+id/skillIcon"
      android:layout_toRightOf="@+id/skillIcon"
      android:paddingLeft="8sp"
      android:text="Large turret compensation* V"/>

  <RelativeLayout
      android:id="@+id/time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_alignParentRight="true">

    <TextView
        android:id="@+id/trainingTime"
        style="@style/skillProgressStyle"
        android:text="22ч 32мин"
        android:textSize="14sp"
        android:paddingRight="8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

  </RelativeLayout>
</RelativeLayout>