<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/skillQueueItem"
                android:orientation="vertical">

  <ImageView
      android:id="@+id/skillIcon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ps_64"/>

  <TextView
      android:id="@+id/skillInQueueName"
      style="@style/skillProgressStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toEndOf="@+id/skillIcon"
      android:layout_toRightOf="@+id/skillIcon"
      android:paddingLeft="8sp"
      android:text="Large turret compensation* V"/>

  <RelativeLayout
      android:id="@+id/time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_alignParentRight="true">

    <TextView
        android:id="@+id/endTime"
        style="@style/skillProgressStyle"
        android:text="22ч 32мин"
        android:textSize="14sp"
        android:paddingRight="8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/progressBarLayout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/serverStatusBox"
      android:background="@drawable/border_filled">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="32sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:background="@drawable/border_char_skill_filled_mid" />

    <TextView
        android:id="@+id/skillName"
        style="@style/skillProgressStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/progressBar"
        android:layout_marginLeft="12sp"
        android:text="Power Grid Management* V" />

    <TextView
        android:id="@+id/timeLeft"
        style="@style/skillProgressStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/progressBar"
        android:layout_marginRight="12sp"
        android:text="20ч 22мин + " />

  </RelativeLayout>
</RelativeLayout>